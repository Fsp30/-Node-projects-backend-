{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "resolveJsonModule": true, 
    "typeRoots": ["./node_modules/@types"], 
    "noImplicitAny": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist", "tests"]
}
